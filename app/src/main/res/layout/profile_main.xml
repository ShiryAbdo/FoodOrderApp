<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">






            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff">


                <!-- Cover Image -->

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner1" />



                <!-- Round image -->

                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/banar1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/girl"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center"
                    app:view_borderWidth="2dp"
                    app:view_borderColor="#cccccc" />


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Developed by : "-->
                <!--android:textSize="22dp"-->
                <!--android:textColor="@color/title_color"-->
                <!--android:layout_gravity="center"/>-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Shiry Abdo"-->
                <!--android:layout_gravity="center"-->
                <!--android:textColor="@color/title_color"-->
                <!--android:textSize="14dp"/>-->



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developed by : "
                    android:textSize="22dp"
                    android:textColor="@color/title_color"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shiry Abdo"
                    android:layout_gravity="center"
                    android:textColor="@color/title_color"
                    android:textSize="14dp"/>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;"-->
                    <!--android:textSize="14dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:layout_gravity="center"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android developer "
                    android:textSize="14dp"
                    android:layout_gravity="center"/>




            </LinearLayout>






            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Contact"

                android:text="Contact"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:background="@drawable/rounded"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                />




            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC"
                android:layout_marginTop="40dp"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ACACAC" />




            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="14dp"
                    android:text= "working with remote data with JSON."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text= "Facilitate and make code simple with libraries and APIs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14dp"
                    android:text= "Strong knowledge in RESTful web services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14dp"
                    android:text= "Strong Knowledge of Android SDK's and what's under the hood."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14dp"
                    android:text= "Utilize SQLite for data management and storage."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14dp"

                    android:text= "experience in building database schemes and good designs."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14dp"
                    android:text= "Develop apps that optimized for many screen sizes and tablets UI."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />







            </LinearLayout>


        </LinearLayout>



    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_black_bgcolor"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/linkedin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/ic_linkedin_button" />
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
android:id="@+id/github_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/ic_github_logo" />
        </LinearLayout>





        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageView
android:id="@+id/gmail_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_gmail_logo" />

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>

