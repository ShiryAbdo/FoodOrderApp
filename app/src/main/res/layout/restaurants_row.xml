<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:tag="cards main container">

    <RelativeLayout
        android:id="@+id/LinearLayoutData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
         android:layout_marginStart="@dimen/_5sdp"
        android:background="#fff">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                card_view:cardBackgroundColor="#00ffffff"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:padding="@dimen/_5sdp"

                    android:background="#00ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:background="#00ffffff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:background="@drawable/roundedt"
                            android:layout_margin="@dimen/_5sdp"
                            android:id="@+id/restaurant_image"
                            android:tag="image_tag"
                            android:padding="@dimen/_1sdp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_logo"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/restaurant_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Android Name"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_weight="1"/>




                            </LinearLayout>



                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:text="Android Version"
                                />
                            <!--                    android:layout_gravity="center_horizontal"
            -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RatingBar
                                    android:layout_marginTop="@dimen/_10sdp"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:id="@+id/ratingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="4"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:stepSize="1.0"
                                    android:rating="2.0" />
                                <TextView
                                    android:text="dd"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/votes_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>





            </android.support.v7.widget.CardView>

            <TextView
                android:background="@drawable/myrect"
                android:layout_gravity="end"
                android:gravity="center"
                android:id="@+id/number"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="48"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/ic_percentage" />







        </FrameLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RelativeLayoutDeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
         android:visibility="gone">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:id="@+id/card"
                card_view:cardBackgroundColor="#00ffffff"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <FrameLayout
                    android:background="@drawable/roundedt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/new_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logo" />
                    <LinearLayout
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="start">



                            <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:src="@drawable/ic_discount" />












                    </LinearLayout>



                    <TextView
                        android:textStyle="bold|italic"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:id="@+id/restaurant_nam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_5sdp" />




                </FrameLayout>
            </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>